<?php
 $cliente="Alisson";
 $producto="deditos de pollo";
 $canti=5;
 $precio=7;
 $iva=12%
 $subTotal*0.12;
 $desc=0;    
 if($subTotal>=50){
    {
    $desc=$subTotal*0.05;
}else{
 if($subTotal>=100&&subTotal<200)
    $desc=$subTotal*0.07;
}else{
 if($subTotal>=200&&subTotal<500)
    $desc=$subTotal*0.10;
}else{
 if($subTotal>=500%%subTotal)
    $desc=$subTotal*0.15;
}  

 }
 $totPagar=$subTotal+$iva-$desc;

?>

<label>RESULTADOS</label><br>
<label>Cliente :</label> <?php echo $cliente; ?><br>
